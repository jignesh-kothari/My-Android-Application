<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Buyers.MainActivity">

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-9494051990341375/3326267618">
    </com.google.android.gms.ads.AdView>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/app_logo"
        android:layout_width="336dp"
        android:layout_above="@+id/app_slogan"
        android:layout_height="158dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/applogo" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/app_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main_join_now_btn"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="150dp"
        android:gravity="center"
        android:text="Find, Discover, Choose and Buy anything online."
        android:textColor="@color/button_text_color"
        android:textSize="15sp"
        android:textStyle="bold|italic" />

    <com.ornach.nobobutton.NoboButton
        android:id="@+id/main_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentLeft="true"
        app:nb_text="Already have an Account? Login"
        app:nb_borderWidth="2dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:nb_backgroundColor="@color/purple_500"
        app:nb_borderColor="@color/button_border_color"
        app:nb_focusColor="@color/purple_700"
        app:nb_textColor="@color/button_text_color"
        app:nb_textAllCaps="false"
        app:nb_radius="20dp"
        android:layout_centerInParent="true"
        app:nb_textSize="18sp"
        app:nb_fontIcon="&#xf090;"/>

    <com.ornach.nobobutton.NoboButton
        android:id="@+id/main_join_now_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main_login_btn"
        android:padding="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:layout_alignParentLeft="true"
        app:nb_text="New In App? Register"
        app:nb_borderWidth="2dp"
        app:nb_fontIcon="&#xf007;"
        app:nb_backgroundColor="@color/purple_500"
        app:nb_borderColor="@color/button_border_color"
        app:nb_focusColor="@color/purple_700"
        app:nb_textColor="@color/button_text_color"
        app:nb_textAllCaps="false"
        app:nb_radius="20dp"
        app:nb_textSize="18sp"/>
</RelativeLayout>