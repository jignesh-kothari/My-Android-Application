<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Admin.AdminAddNewProductActivity">
    <RelativeLayout
        android:id="@+id/r2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/close_addnewproduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/button_text_color"
            android:textSize="20dp" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="356dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@+id/close_cart"
            android:layout_toRightOf="@+id/close_cart"
            android:text="Add Product"
            android:textColor="@color/button_text_color"
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginTop="50dp"
        android:scrollbarStyle="insideInset"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/signup_image_layout"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/select_product_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:cropToPadding="false"
                    android:scaleType="centerCrop"
                    android:src="@drawable/select_product_image1" />

                <ImageView
                    android:id="@+id/img_gone"
                    android:layout_width="54dp"
                    android:layout_height="52dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="51dp"
                    android:layout_marginRight="51dp"
                    android:layout_marginBottom="38dp"
                    app:srcCompat="@drawable/ic_plus" />
            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/ca1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_below="@+id/select_product_image"
                app:cardBackgroundColor="@color/colorTextInputBackground"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:endIconMode="clear_text"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:textColor="@color/button_text_color"
                        android:textColorHint="@color/button_text_color"
                        android:background="@android:color/transparent"
                        android:drawableStart="@drawable/ic_product"
                        android:drawableLeft="@drawable/ic_product"
                        android:drawablePadding="12dp"
                        android:inputType="textMultiLine"
                        android:hint="Product Name"
                        android:imeOptions="actionNext"
                        android:minWidth="320dp"
                        android:minHeight="45dp"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/ca2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_below="@+id/select_product_image"
                app:cardBackgroundColor="@color/colorTextInputBackground"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:endIconMode="clear_text"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/product_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:textColor="@color/button_text_color"
                        android:textColorHint="@color/button_text_color"
                        android:background="@android:color/transparent"
                        android:drawableStart="@drawable/ic_description"
                        android:drawableLeft="@drawable/ic_description"
                        android:drawablePadding="12dp"
                        android:inputType="textMultiLine"
                        android:hint="Product Description"
                        android:imeOptions="actionNext"
                        android:minWidth="320dp"
                        android:minHeight="45dp"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/ca3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_below="@+id/select_product_image"
                app:cardBackgroundColor="@color/colorTextInputBackground"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/product_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:textColor="@color/button_text_color"
                        android:textColorHint="@color/button_text_color"
                        android:background="@android:color/transparent"
                        android:drawableStart="@drawable/dollar"
                        android:drawableLeft="@drawable/dollar"
                        android:drawablePadding="12dp"
                        android:inputType="number"
                        android:hint="Product Price"
                        android:imeOptions="actionNext"
                        android:minWidth="320dp"
                        android:minHeight="45dp"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>

            <com.ornach.nobobutton.NoboButton
                android:id="@+id/add_new_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/remember_me_chkb"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="20dp"
                android:padding="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                app:nb_backgroundColor="@color/purple_500"
                app:nb_borderColor="@color/button_border_color"
                app:nb_borderWidth="2dp"
                app:nb_fontIcon="&#xf0fe;"
                app:nb_focusColor="@color/purple_700"
                app:nb_radius="20dp"
                app:nb_text="Add Product"
                app:nb_textColor="@color/button_text_color" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>