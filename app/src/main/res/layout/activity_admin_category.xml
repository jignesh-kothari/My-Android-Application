<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Admin.AdminCategoryActivity">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Add New Product"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/button_text_color"
        android:gravity="center_horizontal" />



    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="2dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="2dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/t_shirts"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="2dp"
            android:src="@drawable/tshirts"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/sports_t_shirts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sports"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/female_dresses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/female_dresses"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/sweathers"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:src="@drawable/sweather"
            />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/glasses"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/glasses"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/purses_bags_wallets"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/purses_bags"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/hats_caps"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/hats"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/shoes"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/shoess"
            android:layout_marginLeft="16dp" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/headphones_handfree"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/headphoness"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/laptop_pc"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/laptops"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/watches"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/watches"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/mobilephones"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/mobiles"
            android:layout_marginLeft="16dp"
            />

    </LinearLayout>
    <com.ornach.nobobutton.NoboButton
        android:id="@+id/addnew_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/maintain_btn"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        app:nb_backgroundColor="@color/purple_500"
        app:nb_borderColor="@color/button_border_color"
        app:nb_borderWidth="2dp"
        app:nb_fontIcon="&#xf007;"
        app:nb_focusColor="@color/button_col"
        app:nb_radius="20dp"
        app:nb_text="Add New Admin"
        app:nb_textAllCaps="true"
        app:nb_textStyle="bold"
        app:nb_textSize="20dp"
        app:nb_textColor="@color/button_text_color" />
